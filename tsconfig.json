{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src", 
    "paths": {
      "@/*": ["./*"] 
    }
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx", 
    "**/*.png", 
    "expo-env.d.ts", 
    "nativewind-env.d.ts",
    ".expo/types/**/*.ts"
  ],
  "exclude": [
    "node_modules", 
    "babel.config.js", 
    "metro.config.js", 
    "jest.config.js"
  ]
}
